mixin head(data)
	title= data.title
	meta(charset="utf-8")
	
	meta(content=data.author name="author")
	meta(content=data.description name="description")
	
	meta(name="viewport" content="width=device-width, initial-scale=1.0")
	meta(name="HandheldFriendly" content="true")
	meta(name="format-detection", content="telephone=no")
	meta(content="IE=edge" http-equiv="X-UA-Compatible")

	link(rel="shortcut icon", href="img/favicon/favicon.ico", type="image/x-icon")
	link(rel="apple-touch-icon", href="img/favicon/nuclear-icon-64-213215.png")
	link(rel="apple-touch-icon", sizes="72x72", href="img/favicon/nuclear-icon-72-213215.png")
	link(rel="apple-touch-icon", sizes="114x114", href="img/favicon/nuclear-icon-114-213215.png")
	link(rel="apple-touch-icon", sizes="120x120", href="img/favicon/nuclear-icon-120-213215.png")
	link(rel="apple-touch-icon", sizes="144x144", href="img/favicon/nuclear-icon-144-213215.png")
	link(rel="apple-touch-icon", sizes="152x152", href="img/favicon/nuclear-icon-152-213215.png")
		
